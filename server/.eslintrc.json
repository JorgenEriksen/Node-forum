{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"prefer-arrow-callback": ["warn"],
		"camelcase": [
			"warn",
			{ "properties": "always", "ignoreImports": true }
		],
		"no-var": ["error"],
		"semi": ["warn", "always"],
		"quotes": ["warn", "double"]
	}
}
